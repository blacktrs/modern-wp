{
  "name": "blacktrs/modern-wp",
  "type": "project",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Symfony based WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://github.com/blacktrs/modern-wp",
  "support": {
    "issues": "https://github.com/blacktrs/modern-wp/issues"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^1.12",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.0",
    "symfony/http-foundation": "^6.1",
    "symfony/cache": "^6.1",
    "ext-mysqli": "*",
    "symfony/asset": "^6.1",
    "symfony/finder": "^6.1",
    "symfony/config": "^6.1",
    "symfony/routing": "^6.1",
    "symfony/dependency-injection": "^6.1",
    "symfony/dotenv": "^6.1",
    "symfony/yaml": "^6.1",
    "symfony/console": "^6.1",
    "symfony/http-kernel": "^6.1",
    "symfony/framework-bundle": "^6.1",
    "symfony/monolog-bundle": "^3.8",
    "symfony/flex": "^2.2",
    "doctrine/doctrine-bundle": "^2.7",
    "doctrine/doctrine-migrations-bundle": "^3.2",
    "doctrine/orm": "^2.12",
    "symfony/proxy-manager-bridge": "^6.1",
    "sensio/framework-extra-bundle": "^6.1",
    "symfony/doctrine-messenger": "^6.1",
    "symfony/expression-language": "^6.1",
    "symfony/form": "^6.1",
    "symfony/http-client": "^6.1",
    "symfony/intl": "^6.1",
    "symfony/mailer": "^6.1",
    "symfony/mime": "^6.1",
    "symfony/notifier": "^6.1",
    "symfony/process": "^6.1",
    "symfony/security-bundle": "^6.1",
    "doctrine/annotations": "^1.0",
    "phpdocumentor/reflection-docblock": "^5.3",
    "phpstan/phpdoc-parser": "^1.6",
    "symfony/property-access": "^6.1",
    "symfony/property-info": "^6.1",
    "symfony/serializer": "^6.1",
    "symfony/string": "^6.1",
    "symfony/translation": "^6.1",
    "symfony/twig-bundle": "^6.1",
    "twig/extra-bundle": "^2.12|^3.0",
    "twig/twig": "^2.12|^3.0",
    "symfony/validator": "^6.1",
    "symfony/web-link": "^6.1",
    "symfony/webpack-encore-bundle": "^1.15",
    "blacktrs/symfony-wp-bundle": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^6.1",
    "phpunit/phpunit": "^9.5",
    "rector/rector": "^0.12",
    "phpstan/phpstan": "^1.7",
    "symfony/debug-bundle": "^6.1",
    "symfony/stopwatch": "^6.1",
    "symfony/web-profiler-bundle": "^6.1",
    "symfony/maker-bundle": "^1.0",
    "symfony/browser-kit": "^6.1",
    "symfony/css-selector": "^6.1",
    "symfony/phpunit-bridge": "^6.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-symfony": "^1.2",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.1",
    "vimeo/psalm": "^4.24",
    "psalm/plugin-symfony": "^3.1",
    "weirdan/doctrine-psalm-plugin": "^2.3",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "friendsofphp/php-cs-fixer": "^3.10"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "symfony/flex": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
    "test": [
      "",
      "php-cs-fixer fix --dry-run",
      "phpstan analyze",
      "phpunit"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd",
      "modernwp:salts:generate": "symfony-cmd"
    }
  }
}
